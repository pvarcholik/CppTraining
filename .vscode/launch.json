  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) cpp_training_common_tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/common/tests/cpp_training_common_tests",
      "args": [
        "--break"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
